<%- include('header') %>

    <main class="row">
        <section class="col-lg-8">
            <h3 class="m-3">Csevegés -
                <%= user.nickname %> (
                    <%= user.roomname %> )
            </h3>

            <div class="chat-messages mb-3"></div>

            <div class="input-group mb-3">
                <input type="text" class="form-control" placeholder="Üzenet..." id="message">
                <button class="btn btn-success" type="button" id="sendBtn">Küldés <i class="bi bi-arrow-right-circle-fill"></i></button>
            </div>

        </section>
        <aside class="col-lg-4">
            <h3 class="m-3">Felhasználók</h3>
            <ul class="userList mb-3">

            </ul>
            <a href="/" class="btn btn-primary btn-lg w-100 mb-3"><i class="bi bi-box-arrow-left"></i> Kilépés a chat-ből</a>
        </aside>

    </main>

    <script src="/socket.io/socket.io.js"></script>

    <script src="./js/client.js"></script>

    <%- include('footer') %>